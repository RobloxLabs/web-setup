	<Procedure Type="Delete">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the entity with the given ID -->
	<Procedure Type="Get">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
	<!-- Inserts the entity into the table -->
	<Procedure Type="Insert" />
	
	<!-- Updates the entity with the given ID -->
	<Procedure Type="Update">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the ShowcaseItem for the given ShowcaseID and given ItemTypeID and ItemTargetID -->
	<Procedure Type="Get">
		<Parameters>
			<Parameter Name="ShowcaseID" />
			<Parameter Name="ItemTypeID" />
			<Parameter Name="ItemTargetID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the ShowcaseItems for the given ShowcaseID -->
	<Procedure Type="GetPaged">
		<Parameters>
			<Parameter Name="ShowcaseID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets ShowcaseItems by their given IDs -->
