<?xml version="1.0"?>
<Entity Name="Showcase" Namespace="Roblox.Showcases.Entities">
  <!-- The properties of the entity -->
  <Properties>
	<Property Name="ID" Type="long" SqlType="BIGINT" IsPrimaryKey="true" IsReadOnly="true" />
    <Property Name="ShowcaseTypeID" Type="byte" SqlType="TINYINT" />
    <Property Name="CreatorTypeID" Type="byte" SqlType="TINYINT" />
    <Property Name="CreatorTargetID" Type="long" SqlType="BIGINT" />
    <Property Name="Created" Type="DateTime" SqlType="DateTime" Default="getdate()" IsReadOnly="true" />
    <Property Name="Updated" Type="DateTime" SqlType="DateTime" Default="getdate()" IsReadOnly="true" />
  </Properties>
  
  <!-- The SQL procedures for the entity -->
  <Procedures>
	<!-- Deletes the entity with the given ID -->
	<Procedure Type="Delete">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the entity with the given ID -->
	<Procedure Type="Get">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
	<!-- Inserts the entity into the table -->
	<Procedure Type="Insert" />
	
	<!-- Updates the entity with the given ID -->
	<Procedure Type="Update">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the Showcase for the given Creator with the given ShowcaseTypeID -->
	<Procedure Type="Get">
		<Parameters>
			<Parameter Name="ShowcaseTypeID" />
			<Parameter Name="CreatorTypeID" />
			<Parameter Name="CreatorTargetID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets or Creates the Showcase for the given Creator with the given ShowcaseTypeID -->
	<Procedure Type="GetOrCreate">
		<Parameters>
			<Parameter Name="ShowcaseTypeID" />
			<Parameter Name="CreatorTypeID" />
			<Parameter Name="CreatorTargetID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets Showcases by their given IDs -->
	<!--Procedure Type="MultiGet">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure-->
	
  </Procedures>
</Entity>