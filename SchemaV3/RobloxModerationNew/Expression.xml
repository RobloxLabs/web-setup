<?xml version="1.0"?>
<!--
	Contains bits of text along with their MD5 hash for easy indexing/comparison.
	Primarily stored for moderation purposes.
-->
<Entity Name="Expression" Namespace="Roblox.Moderation">
  <Properties>
  	<Property Name="ID" Type="long" SqlType="BIGINT" IsPrimaryKey="true" IsReadOnly="true" />
	<!-- Doing MD5 hash for now -->
    <Property Name="Hash" Type="string" SqlType="binary(16)" />
    <Property Name="Value" Type="string" SqlType="nvarchar(1000)" />
    <Property Name="Created" Type="DateTime" SqlType="DateTime" Default="getdate()" IsReadOnly="true" />
    <Property Name="Updated" Type="DateTime" SqlType="DateTime" Default="getdate()" IsReadOnly="true" />
  </Properties>
  <Procedures>
	<!-- Deletes the entity with the given ID -->
	<Procedure Type="Delete">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the entity with the given ID -->
	<Procedure Type="Get">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the Expression with the given Hash -->
	<Procedure Type="Get">
		<Parameters>
			<Parameter Name="Hash" />
		</Parameters>
	</Procedure>
	
	<!-- Gets or creates the Expression with the given Hash and Value -->
	<Procedure Type="GetOrCreate">
		<Parameters>
			<Parameter Name="Hash" />
			<Parameter Name="Value" />
		</Parameters>
	</Procedure>
	
	<!-- Inserts the entity into the table -->
	<Procedure Type="Insert" />
	
	<!-- Updates the entity with the given ID -->
	<Procedure Type="Update">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
  </Procedures>
</Entity>