<?xml version="1.0"?>
<!--
	A ReportUtterance for moderation.
-->
<Entity Name="ReportUtterance" Namespace="Roblox.Moderation">
  <Properties>
  	<Property Name="ID" Type="long" SqlType="BIGINT" IsPrimaryKey="true" IsReadOnly="true" />
    <Property Name="ReportID" Type="long" SqlType="BIGINT" />
    <Property Name="UtteranceID" Type="long" SqlType="BIGINT" />
    <Property Name="AbuseTypeID" Type="byte?" SqlType="TINYINT" IsNullable="true" />
    <Property Name="Created" Type="DateTime" SqlType="DateTime" Default="getdate()" IsReadOnly="true" />
    <Property Name="Updated" Type="DateTime" SqlType="DateTime" Default="getdate()" IsReadOnly="true" />
  </Properties>
  <Procedures>
	<!-- Deletes the entity with the given ID -->
	<Procedure Type="Delete">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the entity with the given ID -->
	<Procedure Type="Get">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the ReportUtterances with the given ReportID -->
	<Procedure Type="GetPaged">
		<Parameters>
			<Parameter Name="ReportID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the ReportUtterances with the given UtteranceID -->
	<Procedure Type="GetPaged">
		<Parameters>
			<Parameter Name="UtteranceID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the total number of ReportUtterances with the given ReportID -->
	<Procedure Type="GetCount">
		<Parameters>
			<Parameter Name="ReportID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the total number of ReportUtterances with the given UtteranceID -->
	<Procedure Type="GetCount">
		<Parameters>
			<Parameter Name="UtteranceID" />
		</Parameters>
	</Procedure>
	
	<!-- Gets the total number of ReportUtterances with the given UtteranceID and AbuseTypeID -->
	<Procedure Type="GetCount">
		<Parameters>
			<Parameter Name="UtteranceID" />
			<Parameter Name="AbuseTypeID" />
		</Parameters>
	</Procedure>
	
	<!-- Inserts the entity into the table -->
	<Procedure Type="Insert" />
	
	<!-- Updates the entity with the given ID -->
	<Procedure Type="Update">
		<Parameters>
			<Parameter Name="ID" />
		</Parameters>
	</Procedure>
	
  </Procedures>
</Entity>